{{> header}}
{{> navbar}}
<div class="container mt-4">
  <div class="row">
    <div class="col-4">
      <a href="/article/{{articles.0.id}}">
        <img src="{{articles.0.image}}" class="img-content img-fluid" alt="" />
      </a>
    </div>
    <div class="col-8">
      <div class="text-title-content mb-4">{{articles.0.title}}</div>
      <div class="text-desc-content">{{articles.0.content}}</div>
    </div>
  </div>

  <div class="row mt-5">
    {{#each articles}}
    <div class="col-3 content-list">
      <a href="/article/{{this.id}}">
        <img src="{{this.image}}" class="img img-fluid" alt="">
        <div class="title mt-3">
          {{this.title}}
        </div>
      </a>
    </div>
    {{/each}}
  </div>
</div>

{{> footer}}